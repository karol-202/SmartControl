<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:clickable="true"
	android:focusable="true"
	android:background="?android:attr/selectableItemBackground"
	android:descendantFocusability="blocksDescendants">
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/condition_time_precise"
			android:id="@+id/text_condition_time_precise"
			android:textSize="16sp"
			android:textColor="#000000" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="26dp"
			android:id="@+id/text_condition_time_precise_value"
			android:gravity="center_vertical"
			android:textSize="12sp"
			android:text="@string/condition_time_precise_info" />
	</LinearLayout>
	
	<Switch
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/switch_condition_time_precise"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />
</RelativeLayout>