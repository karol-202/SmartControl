<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".behaviour.conditions.ActivityEditCondition">
	
	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar" />
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="16dp">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/text_condition_type"
			android:id="@+id/text_condition_type"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_condition_time_since"
			android:id="@+id/text_condition_time_since"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignBaseline="@+id/button_condition_time_since" />
		
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button_condition_time_since"
			android:layout_below="@+id/text_condition_type"
			android:layout_toRightOf="@+id/text_condition_time_since"
			android:layout_toEndOf="@+id/text_condition_time_since" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_condition_time_to"
			android:id="@+id/text_condition_time_to"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignBaseline="@+id/button_condition_time_to" />
		
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button_condition_time_to"
			android:layout_below="@+id/button_condition_time_since"
			android:layout_toRightOf="@+id/text_condition_time_to"
			android:layout_toEndOf="@+id/text_condition_time_to" />
	
	</RelativeLayout>

</LinearLayout>